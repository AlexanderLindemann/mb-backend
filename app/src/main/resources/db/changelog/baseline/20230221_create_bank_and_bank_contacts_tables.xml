<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create_table_banks" author="a_lindemann">
        <createTable tableName="banks">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="logo" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_table_bank_contacts" author="a_lindemann">
        <createTable tableName="bank_contacts">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bank_id" type="uuid">
                <constraints nullable="false"/>
                <foreignKey constraintName="fk_bank_contacts_bank_id"
                            references="banks(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>