<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="V2_add_fields_to_attachment_table" author="a.lindemann">
        <addColumn tableName="attachment">
            <column name="mime_type" type="varchar(255)"/>
            <column name="content_md5" type="varchar(32)"/>
        </addColumn>
    </changeSet>
    <changeSet id="add_column_logo_attachment_id_to_banks_table" author="a.lindemann">
        <addColumn tableName="bank">
            <column name="logo_attachment_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet id="add_fk_constraint_to_bank_table" author="a.lindemann">
        <addForeignKeyConstraint baseTableName="bank" baseColumnNames="logo_attachment_id"
                                 constraintName="bank_attachment_fk"
                                 referencedTableName="attachment" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>