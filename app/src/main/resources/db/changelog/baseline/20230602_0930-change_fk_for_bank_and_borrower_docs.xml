<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="a.verbitskii" id="add_foreign_key_constraints">
        <preConditions>
            <tableExists tableName="attachment" />
            <tableExists tableName="bank" />
            <tableExists tableName="borrower_documents" />
        </preConditions>
        <dropForeignKeyConstraint
                baseTableName="attachment"
                constraintName="fk_attachment_bank"
        />
        <dropForeignKeyConstraint
                baseTableName="attachment"
                constraintName="fk_attachment_borrower_documents"
        />
        <addForeignKeyConstraint
                baseTableName="bank"
                baseColumnNames="attachment_id"
                constraintName="fk_attachment_bank"
                referencedTableName="attachment"
                referencedColumnNames="id"
        />
        <addForeignKeyConstraint
                baseTableName="borrower_documents"
                baseColumnNames="attachment_id"
                constraintName="fk_attachment_borrower_documents"
                referencedTableName="attachment"
                referencedColumnNames="id"
        />
    </changeSet>


</databaseChangeLog>