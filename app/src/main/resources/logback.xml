<configuration scan="true" scanPeriod="30 seconds">

    <springProperty name="application_name" source="spring.application.name"/>


    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>[%date][%-5level][%thread][%logger{40}][%X{traceId}/%X{parentId}/%X{spanId}] - %message%n%exception</pattern>
        </encoder>
    </appender>

    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
        <file>logs/${application_name}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/rotation/${application_name}.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>20</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>[%date][%-5level][%thread][%logger{40}][%X{traceId}/%X{parentId}/%X{spanId}] - %message%n%exception</pattern>
        </encoder>
    </appender>


    <!-- ***** Joining loggers to files ***** -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

<!--    <logger level="TRACE" name="org.springframework.security"/>-->

</configuration>